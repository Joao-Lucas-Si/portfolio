---
import Contanto from "../components/Contanto.astro";
import TecnologiaLogo from "../components/TecnologiaLogo.astro";
import ContantoSvg from "../constants/ContantoSvg";
import ProgramadorImagem from "../assets/images/undraw_programming_re_kg9v.svg";
import TecnologiasSvg from "../constants/TecnologiasSvg";
import Image from "astro/components/Image.astro";
---

<header class="relative h-[90vh]" id="index_header">
    <div id="index_header__fundo">
        <TecnologiaLogo
            position="left-[1%] top-[1%]"
            cor="laranja"
            nome="html"
            svg={TecnologiasSvg.html}
        />
        <TecnologiaLogo
            position="left-[1%] top-[50%] translate-y-[-50%]"
            cor="azul"
            nome="css"
            svg={TecnologiasSvg.css}
        />
        <TecnologiaLogo
            viewBox="0 0 128 128"
            position="left-[calc(1%_+_4rem)] translate-x-[-50%] top-[calc(50%_-_8.5rem)]"
            cor="azul"
            nome="tailwind"
            isSecundary
            svg={TecnologiasSvg.tailwind}
        />
        <TecnologiaLogo
            position="left-[1%] bottom-[1%]"
            cor="amarelo"
            nome="javascript"
            svg={TecnologiasSvg.javascript}
        />
        <TecnologiaLogo
            position="right-[1%] top-[1%]"
            cor="vermelho"
            nome="java"
            svg={TecnologiasSvg.java}
        />
        <TecnologiaLogo
            viewBox="0 0 128 128"
            position="stroke-[3] left-[50%] top-[1%] translate-x-[-50%]"
            cor="azul"
            nome="postgres"
            svg={TecnologiasSvg.postgres}
        />
        <TecnologiaLogo
            viewBox="0 0 128 128"
            position="stroke-[3] left-[50%] bottom-[1%] translate-x-[-50%]"
            cor="azul"
            nome="dart"
            svg={TecnologiasSvg.dart}
        />
        <TecnologiaLogo
            viewBox="0 0 128 128"
            position="left-[56%] bottom-[1%] translate-y-[-50%]"
            cor="azul"
            nome="flutter"
            isSecundary
            svg={TecnologiasSvg.flutter}
        />
        <TecnologiaLogo
            viewBox="0 0 128 128"
            position="left-[9.5rem] bottom-[1%] translate-y-[-50%]"
            cor="azul"
            nome="typescript"
            isSecundary
            svg={TecnologiasSvg.typescript}
        />
        <TecnologiaLogo
            viewBox="0 0 140 140"
            position="right-[9.5rem] top-[1%] translate-y-[50%]"
            cor="verde"
            nome="typescript"
            isSecundary
            svg={TecnologiasSvg.spring}
        />
        <TecnologiaLogo
            viewBox="0 0 512 512"
            position="left-[1%] bottom-[9rem] translate-x-[50%]"
            cor="azul"
            nome="react"
            isSecundary
            svg={TecnologiasSvg.react}
        />
        <TecnologiaLogo
            position="right-[1%] bottom-[1%]"
            cor="amarelo"
            svg={TecnologiasSvg.python}
            nome="python"
        />
