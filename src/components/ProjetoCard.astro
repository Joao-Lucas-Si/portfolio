---
import Image from 'astro/components/Image.astro';
import type { Projeto } from '../types/Projeto';

interface Props extends Projeto {

}

const { descricao, github, id, link, nome, tags, foto } = Astro.props

---

<div data-projeto={nome} data-tags={tags.join(",")} class="projeto border-white hover:border-purple-500  hover:drop-shadow-[0_0_15px_purple] border-2 rounded-md overflow-hidden gap-2 h-72 justify-between relative transition-all hover:grayscale-0 grayscale  flex flex-col">
    <!-- <Image /> -->
   
        {foto && <Image  alt=`Imagem do projeto "${nome}"` src={foto} class="h-[100%] w-[100%] "/>}
        <div class="absolute left-4 bottom-4">
            <h3 class=" px-2 text-3xl text-white font-bold">{nome}</h3>
       
            <ul class="flex gap-1 justify-center px-2 flex-wrap">
                {tags.slice(0,3).map(tag => <li class="py-1 px-2 rounded-lg bg-purple-500 ">{tag}</li>)}
            </ul>

        </div>
        
        <a class="rounded-md bg-purple-500 py-1 absolute right-4 bottom-4 grayscale-0 px-2 text-center" href={`/projetos/${id}`}>acessar</a>
    
</div>